<ui:composition template="templateMenu.xhtml"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:tm="http://java.sun.com/jsf/composite/terminal/1_0/components">

	<ui:define name="title">
		<h:outputText value="Lista de contratos" />
	</ui:define>

'
	<ui:define name="principal">
		
		<h:form id="contratoTableForm">
			<p:dataTable paginator="true" rows="5" value="#{contratoMB.contratos}"
				var="contrato" id="tableContratos">

				<p:column>
					<p:commandButton value="Devoluçao"
						action="#{contratoMB.devolucao(contrato)}" update="tableContratos"></p:commandButton>
				</p:column>

				<p:column headerText="SITUAÇÃO"
					filterBy="#{contrato.situacao}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.situacao}" />
				</p:column>
				
				
				<p:column headerText="Codigo do contrato"
					filterBy="#{contrato.id}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.id}" />
				</p:column>

				
				<p:column headerText="Codigo do cliente"
					filterBy="#{contrato.cliente.id}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.cliente.id}" />
				</p:column>
				
				<p:column headerText="Nome do Cliente"
					filterBy="#{contrato.cliente.nome}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.cliente.nome}" />
				</p:column>
				
				<p:column headerText="Tipo do carro"
					filterBy="#{contrato.veiculo.tipo}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.veiculo.tipo}" />
				</p:column>
				
				<p:column headerText="Modelo do carro"
					filterBy="#{contrato.veiculo.modelo}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.veiculo.modelo}" />
				</p:column>
				
				<p:column headerText="Placa do carro"
					filterBy="#{contrato.veiculo.placa}" filterMatchMode="contains">
					<p:outputLabel value="#{contrato.veiculo.placa}" />
				</p:column>
			</p:dataTable>

		</h:form>
	</ui:define>
</ui:composition>


